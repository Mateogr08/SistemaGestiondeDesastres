<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.controller.PanelDelLoginController">

    <left>
        <AnchorPane prefHeight="400.0" prefWidth="220.0"
                    style="-fx-background-color: #00569D;"
                    BorderPane.alignment="CENTER">
            <children>

                <Label alignment="CENTER" layoutX="6.0" layoutY="67.0"
                       prefHeight="21.0" prefWidth="208.0"
                       text="Sistema de gestión"
                       textFill="WHITE">
                    <font>
                        <Font name="Verdana Bold" size="18.0"/>
                    </font>
                </Label>

                <Label alignment="CENTER" layoutX="7.0" layoutY="88.0"
                       prefHeight="21.0" prefWidth="208.0"
                       text="de desastres"
                       textFill="WHITE">
                    <font>
                        <Font name="Verdana Bold" size="18.0"/>
                    </font>
                </Label>

                <ImageView fitHeight="150.0" fitWidth="200.0"
                           layoutX="35.0" layoutY="168.0"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/LogoSGD.png"/>
                    </image>
                </ImageView>

                <Circle fill="WHITE" layoutX="110.0" layoutY="243.0"
                        radius="100.0" opacity="0.03"/>

                <Rectangle width="200.0" height="58.0"
                           layoutX="10.0" layoutY="59.0"
                           arcWidth="5.0" arcHeight="5.0"
                           fill="WHITE" opacity="0.03"/>

            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane prefHeight="400.0" prefWidth="280.0"
                    BorderPane.alignment="CENTER">
            <children>

                <Label alignment="CENTER" layoutX="36.0" layoutY="86.0"
                       prefWidth="208.0" text="Login">
                    <font>
                        <Font name="Verdana Bold" size="18.0"/>
                    </font>
                </Label>

                <Label layoutX="14.0" layoutY="159.0"
                       text="Username">
                    <font>
                        <Font name="Verdana Bold" size="12.0"/>
                    </font>
                </Label>

                <Label layoutX="14.0" layoutY="199.0"
                       text="Password">
                    <font>
                        <Font name="Verdana Bold" size="12.0"/>
                    </font>
                </Label>

                <!-- Username -->
                <TextField fx:id="txtUsuario" layoutX="99.0" layoutY="154.0"
                           prefHeight="25.0" prefWidth="162.0"/>

                <!-- Password -->
                <PasswordField fx:id="txtPassword" layoutX="99.0" layoutY="194.0"
                               prefHeight="25.0" prefWidth="161.0"/>

                <!-- Botón login -->
                <Button fx:id="btnLogin"
                        onAction="#login"
                        layoutX="14.0" layoutY="246.0"
                        prefHeight="25.0" prefWidth="252.0"
                        style="-fx-background-color: #00569D; -fx-text-fill: white;"
                        text="Login">
                    <font>
                        <Font name="Verdana Bold" size="12.0"/>
                    </font>
                </Button>

            </children>
        </AnchorPane>
    </center>

</BorderPane>

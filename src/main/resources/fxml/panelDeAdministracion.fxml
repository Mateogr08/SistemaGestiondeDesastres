<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane
        prefHeight="600.0"
        prefWidth="700.0"
        style="-fx-background-color: #f5f5f5;"
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="co.edu.uniquindio.controller.PanelDeAdministracionController">

    <!-- Título arriba -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0"
              style="-fx-padding: 20px; -fx-background-color: #FFFFFF;">
            <Label text="Panel de Administración"
                   style="-fx-font-size: 24px; -fx-text-fill: black; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20px;">

            <!-- Sección Recursos -->
            <TitledPane expanded="true" text="Recursos Disponibles">
                <TableView fx:id="tablaRecursos" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="colRecurso" prefWidth="200" text="Recurso" />
                        <TableColumn fx:id="colCantidad" prefWidth="100" text="Cantidad" />
                        <TableColumn fx:id="colUbicacion" prefWidth="200" text="Ubicación" />
                    </columns>
                </TableView>
            </TitledPane>

            <!-- Sección Equipos de Rescate -->
            <TitledPane expanded="true" text="Equipos de Rescate">
                <VBox spacing="10">

                    <TableView fx:id="tablaEquipos" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="colEquipo" prefWidth="200" text="Equipo" />
                            <TableColumn fx:id="colIntegrantes" prefWidth="150" text="Integrantes" />
                            <TableColumn fx:id="colZonaAsignada" prefWidth="200" text="Zona asignada" />
                        </columns>
                    </TableView>

                    <!-- ComboBox para seleccionar ubicación -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Seleccionar ubicación:" />
                        <ComboBox fx:id="comboUbicaciones" prefWidth="200" />
                    </HBox>

                    <!-- Botones de acción -->
                    <HBox alignment="CENTER" spacing="15">
                        <Button fx:id="btnAsignarRecursos"
                                onAction="#onAsignarRecursos"
                                text="Asignar Recursos"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>

                        <Button fx:id="btnAsignarEquipo"
                                onAction="#onAsignarEquipo"
                                text="Asignar Equipo"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>

                        <Button fx:id="btnVolver"
                                onAction="#onVolver"
                                text="Volver"
                                style="-fx-background-color: #DC143C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                    </HBox>
                </VBox>
            </TitledPane>

        </VBox>
    </center>

</BorderPane>
